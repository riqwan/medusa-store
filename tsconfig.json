{
  "compilerOptions": {
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "allowJs": false,
    "checkJs": false,
    "outDir": "dist",
    "strict": true,
    "target": "es5",
    "lib": ["es5", "es6", "dom"],
    "module": "commonjs",
    "isolatedModules": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
  },
  "include": ["./src"]
}
